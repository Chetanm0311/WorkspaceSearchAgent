# Environment Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FILE=logs/mcp_server.log

# Google Drive Configuration
GOOGLE_DRIVE_PRODUCTION=true
GOOGLE_CREDENTIALS_PATH=credentials.json
GOOGLE_TOKEN_PATH=token.json

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Descope Authentication Configuration
DESCOPE_PROJECT_ID=project_key
DESCOPE_MANAGEMENT_KEY=Management_key

# Cequence AI Gateway (for production)
CEQUENCE_ENABLED=false
CEQUENCE_API_ENDPOINT=https://api.cequence.ai
CEQUENCE_API_KEY=your_cequence_api_key_here
CEQUENCE_TENANT_ID=your_tenant_id_here

# User Configuration
USER_EMAIL=user@example.com

# User Permission Requirements (comma-separated)
REQUIRED_PERMISSIONS=google-drive:read,mcp:access
REQUIRED_ROLES=user,admin

# Authentication Settings
DISABLE_AUTH=false

MCP_SERVER_URL=http://localhost:8000
